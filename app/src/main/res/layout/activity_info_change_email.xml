<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:background="#FFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/infoChangeEmail_tvInfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:text="이름, 생년월일, 성별은 수정이 불가능하며,\n본인인증을 하지 않으신 분은 정보가 나타나지 않습니다."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:gravity="center"/>
            <!-- 구분선 -->
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primaryBorder"/>
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:columnCount="2"
                android:rowCount="4"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_marginBottom="8dp"
                    android:text="본인인증 여부"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/infoChangeEmail_tvAuthYN"
                    android:text="미인증회원"
                    android:textSize="16sp"/>
            </GridLayout>
            <!-- 구분선 -->
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primaryBorder"/>
            <!-- dla-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일 주소"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/infoChangeEmail_etEmail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:enabled="false"
                        android:cursorVisible="false"
                        android:layout_weight="1"/>
                    <Button style="@style/Widget.AppCompat.Button.Borderless"
                        android:id="@+id/infoChangeEmail_btnChange"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="변경"
                        android:background="@color/primary"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">
                    <Button style="@style/Widget.AppCompat.Button.Borderless"
                        android:id="@+id/infoChangeEmail_btnNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="변경 완료"
                        android:textSize="@dimen/activity_fontSize"
                        android:background="@color/primaryDisabled"
                        android:textColor="@color/white"
                        android:enabled="false"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>