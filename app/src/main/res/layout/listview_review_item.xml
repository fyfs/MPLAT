<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="110dp"
    android:padding="10dp"
    android:id="@+id/reviewItem_llParent">
        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/reviewItem_ivImageIcon"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/reviewItem_tvJoinImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:padding="2dp"
                    android:text="신청\n완료"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@color/primary"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/reviewItem_tvAppTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="랜드슬라이더"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/reviewItem_tvRemainDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:background="@color/primary"
                            android:text="10일 남음"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/reviewItem_tvReward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(최대 성인 3인 방문) 매장 춫언 메뉴 제공|스페셜 모듬.."
                    android:textColor="@color/primary"/>
                <TextView
                    android:id="@+id/reviewItem_tvReviewMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="SNS 홍보(인스타그램)"/>
                <TextView
                    android:id="@+id/reviewItem_tvJoinInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1명 선정(현재 2명 신청)"/>

        </LinearLayout>

</LinearLayout>