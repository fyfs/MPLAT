<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/agree_tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"/>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/darkgray"/>
                <CheckBox
                    android:id="@+id/agree_cbAgreeEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:checked="false"
                    android:button="@null"
                    android:background="@android:color/transparent"
                    android:text="@string/agree_agreeEmail"
                    android:textColor="#636363"
                    android:drawableLeft="@drawable/ncheckbox"></CheckBox>
                <CheckBox
                    android:id="@+id/agree_cbAgreeSMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:checked="false"
                    android:button="@null"
                    android:background="@android:color/transparent"
                    android:text="@string/agree_agreeSMS"
                    android:textColor="#636363"
                    android:drawableLeft="@drawable/ncheckbox"></CheckBox>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--하단 > 다음 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <Button style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/agree_btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/com_next"
            android:textSize="@dimen/activity_fontSize"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>