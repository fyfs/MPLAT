<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@color/lightgray"
            android:textColor="@color/primaryFont"
            android:gravity="center"
            android:text="PIN 번호 확인"
            android:textSize="18sp"/>
        <!-- 경계선 -->
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bordergray"/>
        <!-- 금액 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/cultureland_dial_tvPriceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="금액"
                android:textSize="16sp"
                android:textColor="@color/primaryFont"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/cultureland_dial_tvPriceContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primaryFont"
                android:layout_weight="1"/>
        </LinearLayout>
        <!-- 유효기간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/cultureland_dial_tvValidateDateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="유효기간"
                android:textSize="16sp"
                android:textColor="@color/primaryFont"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/cultureland_dial_tvValidateDateContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primaryFont"
                android:layout_weight="1"/>
        </LinearLayout>
        <!-- PIN번호 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="22dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/cultureland_dial_tvPinCodeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PIN번호"
                android:textSize="16sp"
                android:textColor="@color/primaryFont"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/cultureland_dial_tvPinCodeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primaryFont"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cultureland_dial_tvClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:text="닫기"
                android:gravity="center"
                android:textSize="18sp"/>
            <!--TextView
                android:id="@+id/btn_common_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:textColor="@color/bluegreen"
                android:textSize="18sp"/-->
        </LinearLayout>
    </LinearLayout>

</ScrollView>