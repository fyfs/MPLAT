<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_weight="10">
        <!--seq 안보이게-->
        <TextView
            android:id="@+id/pointhistory_tvSeq"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone"/>
        <!-- 분류 -->
        <TextView
            android:id="@+id/pointhistory_tvDatetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="14sp"
            android:layout_weight="4"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4">
                <TextView
                    android:id="@+id/pointhistory_tvGubun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textSize="14sp"
                    android:textColor="@color/primaryFont" />
                <TextView
                    android:id="@+id/pointhistory_tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textSize="14sp"
                    android:textColor="@color/primaryFont" />
        </LinearLayout>

        <!-- 답변완료/확인중 -->
        <TextView
            android:id="@+id/pointhistory_tvPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="14sp"
            android:textColor="@color/primaryFont"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"/>
</LinearLayout>