<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신청시 주의사항"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reviewRequest1_info11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="※ "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/reviewRequest1_info12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰어 선정결과 및 진행 안내는 개인정보에 입력하신 이메일과 휴대전화번호로 알려드립니다. (리뷰 상품 배송 주소 및 휴대전화번호와 무관합니다)"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="신청 전에 꼭 확인해주세요!"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reviewRequest1_info21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/reviewRequest1_info22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 등록 기간에 리뷰 미 등록시 추후 리뷰어 선정에 제한을 받습니다."
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reviewRequest1_info31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/reviewRequest1_info32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰는 홍보나 필요에 의해서 사용될 수 있습니다."
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reviewRequest1_info41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/reviewRequest1_info42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체험 후에 리뷰를 등록하지 않을 경우, 리워드 비용을 변상 또는 환불해 주셔야 합니다."
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reviewRequest1_info51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/reviewRequest1_info52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참여 후 작성되는 리뷰의 유지기간은 최소 6개월 입니다."
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/border">
        <CheckBox
            android:id="@+id/reviewRequest1_check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:checked="false"
            android:button="@null"
            android:background="@android:color/transparent"
            android:text="위의 신청 전 주의사항을 확인하였으며, 등록된 사진 이미지 및 링크 활용에 동의합니다."
            android:textColor="#636363"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ncheckbox"></CheckBox>
        <CheckBox
            android:id="@+id/reviewRequest1_check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:checked="false"
            android:button="@null"
            android:background="@android:color/transparent"
            android:text="작성된 리뷰를 6개월 내에 삭제, 수정, 비공개 처리하는 경우에는 제공받은 리워드에 대한 배상이 청구될 수 있습니다."
            android:textColor="#636363"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ncheckbox"></CheckBox>
    </LinearLayout>
    <!--하단 > 다음 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/reviewRequest1_btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/com_next"
            android:textSize="@dimen/activity_fontSize"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>