<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--제목-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공유하기"
            android:padding="10dp"
            android:background="@color/lightgray"
            android:textColor="@color/primaryFont"
            android:gravity="center"
            android:textSize="16sp"/>
        <!-- 경계선 -->
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryBorder"/>
        <!--버전-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/reviewDetail_ivKakao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/shortcut_kakao"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/reviewDetail_ivFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/shortcut_facebook"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/reviewDetail_ivTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/shortcut_tweeter"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/reviewDetail_ivKakaostroy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/shortcut_kakaostory"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <!--확인-->
        <TextView
            android:id="@+id/dialog_reviewDetail_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="취소"
            android:padding="10dp"
            android:background="@color/primaryBlack"
            android:textColor="@color/white"
            android:gravity="center"
            android:onClick="onClick"
            android:textSize="16sp"/>

    </LinearLayout>

</ScrollView>