<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">
    <LinearLayout
        android:id="@+id/recommendHistory_llParent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/recommendHistory_llRecommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@color/white">
            <TextView
                android:id="@+id/recommendHistory_tvRecommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="추천하기"
                android:textSize="16sp"
                android:gravity="center_vertical|center"
                android:textColor="@color/primaryFont"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recommendHistory_llRecommendHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@color/primary">
            <TextView
                android:id="@+id/recommendHistory_tvRecommendHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="추천/가입내역"
                android:textSize="16sp"
                android:gravity="center_vertical|center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recommendHistory_llRecommendGrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@color/white">
            <TextView
                android:id="@+id/recommendHistory_tvRecommendGrade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="나의 추천등급"
                android:textSize="16sp"
                android:gravity="center_vertical|center"
                android:textColor="@color/primaryFont"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="추천링크로 가입이 완료된 경우만 표시됩니다."
            android:textSize="16sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/recommendHistory_tvTotalCnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="총 추천 인원 : 150명"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/recommendHistory_tvYearmonthCnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="이번달 추천인원 : 20명"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
        <!-- 구분선 -->
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryBorder"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/recommendHistory_spRecommendTypeCodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/recommendHistory_spYearmonths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <ListView
            android:id="@+id/recommendHistory_lvList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>

</LinearLayout>