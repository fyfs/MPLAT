<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="10dp"
    android:id="@+id/missionItem_llParent">
        <LinearLayout
            android:id="@+id/survey_llMissionHistory"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_weight="1">
                <TextView
                    android:id="@+id/survey_tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="화장품 관련조사(R2)"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/survey_tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2016.12.16~2016.12.30"
                    android:textSize="14sp"
                    android:textColor="@color/darkgray"/>
        </LinearLayout>
        <TextView
            android:id="@+id/survey_tvChildPoint"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="right"/>
</LinearLayout>