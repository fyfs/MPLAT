<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/blog_llParent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <!-- 블로그 선택-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="블로그 1"
            android:id="@+id/blog_tvHeader"
            android:textSize="18sp"
            android:textColor="@color/primaryFont"
            android:gravity="left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <Button style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/blog_btnDelete"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="삭제"
                android:textSize="16sp"
                android:background="@color/darkblack"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
    <!-- 선택-->
    <Spinner
        android:id="@+id/blog_spBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/blog_etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="블로그 제목을 입력하세요"
        android:background="@drawable/border"
        android:textCursorDrawable="@null"
        android:textColor="@color/primary"
        android:inputType="text"/>
    <EditText
        android:id="@+id/blog_etUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="블로그 URL을 입력하세요"
        android:background="@drawable/border"
        android:textCursorDrawable="@null"
        android:textColor="@color/primary"
        android:inputType="textVisiblePassword" />
</LinearLayout>