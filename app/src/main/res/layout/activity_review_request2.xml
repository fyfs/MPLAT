<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 블로그/SNS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="1dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 블로그/SNS를 선택해 주세요."
                    android:textSize="18sp"/>
                <Spinner
                    android:id="@+id/reviewRequest2_spBlogSns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primaryBorder"/>
            </LinearLayout>
            <!-- 신청한마디 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="1dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. 신청 한마디를 남겨주세요."
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/reviewRequest2_etMsg"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:inputType="text|textMultiLine"
                    android:gravity="top"
                    android:background="@drawable/border"/>
            </LinearLayout>
            <!-- 리뷰 필수 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="1dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. "
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="리뷰 필수 정보를 입력하세요.\n이번 리뷰의 필수정보는 다나와 아이디 입니다."
                        android:textSize="18sp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/reviewRequest2_etRequestInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:background="@drawable/border"/>
            </LinearLayout>

            <!-- 다음 -->
            <Button style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/reviewRequest2_btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="다음"
                android:textSize="@dimen/activity_fontSize"
                android:background="@color/primaryDisabled"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView><!-- 2-->
</LinearLayout><!-- 1 -->