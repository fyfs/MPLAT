<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_marginBottom="40dp">
    <ScrollView
        android:id="@+id/cashAuthDesc_svParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cashAuthDesc_tvInfo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="포인트 쿠폰번호가 확인되었습니다.\n아래의 내용을 확인 후 등록해 주시기 바랍니다."
                    android:gravity="center"
                    android:textSize="17sp"/>
                <!-- 구분선 -->
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primaryBorder"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:orientation="horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="30dp">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_marginBottom="8dp"
                        android:text="쿠폰명"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/pointCouponUse_tvCouponName"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_marginBottom="8dp"
                        android:text="쿠폰번호"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/pointCouponUse_tvCouponNumber"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_marginBottom="8dp"
                        android:text="지급포인트"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/pointCouponUse_tvCouponPoint"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_marginBottom="8dp"
                        android:text="유효기간"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/pointCouponUse_tvCouponValidity"
                        android:textSize="16sp"/>
                </GridLayout>
                <!-- 구분선 -->
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primaryBorder"/>

            </LinearLayout>
        </LinearLayout>
        <!-- 등급아이콘, 로그인아이디, 포인트아이콘, 포인트-->

    </ScrollView>
    <!-- 다음 -->
    <Button style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/pointCouponUse_btnRegCoupon"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="쿠폰 등록"
        android:textSize="@dimen/com_btnText"
        android:background="@color/primary"
        android:textColor="@color/white" />
</FrameLayout>