<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/grade_llMain"
    android:background="#FFF">
    <!-- 메인페이지-->
    <!-- 하단 메뉴 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="true"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 등급페이지 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/grade_banner" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:paddingTop="18dp">
                    <TextView
                        android:id="@+id/grade_tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="10dp">
                    <ImageView
                        android:id="@+id/grade_ivGradeImage"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="14dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/grade_tvGradeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </FrameLayout>
            <!-- 메뉴 리스트뷰-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- 포인트 추가 적립율 *********************************-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="25dp"
                        android:text="포인트 추가 적립율"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/grade_tvExtraRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="45dp"
                        android:text="5%"
                        android:textSize="16sp"/>
                    <!-- 경계선 -->
                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="1dp"
                    android:background="@color/primaryBorder"/>
                <!-- 활동지수(3개월 평균) *********************************-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="25dp"
                        android:text="활동지수(3개월 평균)"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/grade_tvActivePoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="45dp"
                        android:text="5%"
                        android:textSize="16sp"/>
                    <!-- 경계선 -->
                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="1dp"
                    android:background="@color/primaryBorder"/>

                <!-- 등급 적용기간 *********************************-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="25dp"
                        android:text="등급 적용기간"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/grade_tvGradePeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="45dp"
                        android:text="5%"
                        android:textSize="16sp"/>
                    <!-- 경계선 -->
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="1dp"
                    android:background="@color/primaryBorder"/>

                <!-- 다음 등급 적용일 *********************************-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="25dp"
                        android:text="다음 등급 적용일"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/grade_tvNextGradeDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="45dp"
                        android:text="5%"
                        android:textSize="16sp"/>
                    <!-- 경계선 -->
                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="1dp"
                    android:background="@color/primaryBorder"/>
                <!-- 포인트 쿠폰등록-->
                <Button style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/grade_btnDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="활동지수 상세내역"
                    android:textSize="18sp"
                    android:background="@color/primary"
                    android:textColor="@color/white" />
                <Button style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/grade_btnGradeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="회원등급별 혜택안내"
                    android:textSize="18sp"
                    android:background="@color/darkblack"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>