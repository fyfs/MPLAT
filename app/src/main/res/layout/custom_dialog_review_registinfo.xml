<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--제목-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리뷰 등록 절차 안내"
            android:padding="10dp"
            android:background="@color/lightgray"
            android:textColor="@color/primaryFont"
            android:gravity="center"
            android:textSize="16sp"/>
        <!-- 경계선 -->
        <!--View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryBorder"/-->
        <!--버전-->
        <ImageView
            android:id="@+id/dialog_reviewProcessInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/review_process_info"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <!--확인-->
        <TextView
            android:id="@+id/dialog_review_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="닫기"
            android:padding="10dp"
            android:background="@color/primaryBlack"
            android:textColor="@color/white"
            android:gravity="center"
            android:onClick="onClick"
            android:textSize="16sp"/>

    </LinearLayout>

</ScrollView>