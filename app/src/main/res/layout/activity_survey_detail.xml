<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!-- 앱 출시명 -->
                        <TextView
                            android:id="@+id/surveyDetail_tvTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="크래저 레전드"
                            android:textStyle="bold"
                            android:layout_weight="1" />
                        <!-- 포인트 -->
                        <TextView
                            android:id="@+id/surveyDetail_tvPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textSize="20sp"
                            android:text="800P"
                            android:layout_gravity="right"
                            android:gravity="right"/>
                    </LinearLayout>
                    <!-- 고객사 -->
                    <TextView
                        android:id="@+id/missionDetail_tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2016.12.20~2016.12.30"/>
                    <TextView
                        android:id="@+id/missionDetail_tvPointRealtimeYn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="즉시적립(조사 종료 후 즉시적립)"/>
                </LinearLayout>
            </LinearLayout>
            <!-- 게임 다운로드 공유하기-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/surveyDetail_tvSurveyStart"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="참여하기(소요시간:10분)"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@color/primary"
                    android:textColor="@color/white"
                    android:padding="1dp"
                    android:layout_marginRight="1dp"/>
            </LinearLayout>

        </LinearLayout>
        <!-- 구분선 -->
        <View android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/primary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="설문 참여시 주의사항"
            android:textSize="18sp"
            android:gravity="center"/>
        <!-- 구분선 -->
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryBorder"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="본 설문에는 응답의 성실도를 판별하기 위한 질문이 포함되어 있습니다."
                android:textSize="15sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/surveyDetail_tvInfo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="불성실하게 응답한 경우, 조사는 예고없이 종료되며 포인트로 적립되지 않습니다."
                android:textSize="15sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="외부 서버에서 진행되는 조사의 경우, 포인트 적립을 위해 암호화된 ID가 다른 리서치회사에 제공됩니다."
                android:textSize="15sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="설문조사 초반 대상자 확인을 위한 질문이 포함되어 있을 수 있습니다."
                android:textSize="15sp"
                android:layout_weight="1"/>
        </LinearLayout>

</LinearLayout>