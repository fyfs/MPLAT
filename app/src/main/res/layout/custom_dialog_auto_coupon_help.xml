<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--제목-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쿠폰 자동 발급 안내"
            android:padding="10dp"
            android:background="@color/lightgray"
            android:textColor="@color/primaryFont"
            android:gravity="center"
            android:textSize="16sp"/>
        <!-- 경계선 -->
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryBorder"/>
        <!--버전-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="- "/>
                <TextView
                    android:id="@+id/autoCouponTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="쿠폰 자동 발급을 신청하시면, 사용 가능한 쿠폰이 자동으로 발급됩니다."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="- "/>
                <TextView
                    android:id="@+id/autoCouponTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="자동발급된 쿠폰은 나의 쿠폰함에서 확인하실 수 있습니다."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="- "/>
                <TextView
                    android:id="@+id/autoCouponTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="쿠폰 자동발급은 상시적으로 신청 및 해제가 가능합니다."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="- "/>
                <TextView
                    android:id="@+id/autoCouponTv4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="쿠폰 자동발급 게임 App 관련 쿠폰만 가능합니다."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="- "/>
                <TextView
                    android:id="@+id/autoCouponTv5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="쿠폰 자동발급 희망하는 특정 게임장르 App만 선택하여 발급 받으실 수 있습니다."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="- "/>
                <TextView
                    android:id="@+id/autoCouponTv6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="사전예약 쿠폰은 자동 발급이 되지 않습니다. 별도로 신청해주시기 바랍니다."/>
            </LinearLayout>

        </LinearLayout>

        <!--확인-->
        <TextView
            android:id="@+id/dialog_autoCouponHelp_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/btn_ok"
            android:padding="10dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:gravity="center"
            android:onClick="onClick"
            android:textSize="16sp"/>

    </LinearLayout>

</ScrollView>