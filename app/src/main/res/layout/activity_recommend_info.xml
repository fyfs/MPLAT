<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <!-- 1. 회원추천 안내 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="1. 회원추천 안내"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구, 동료, 가족, 지인을 엠플랫 회원으로 추천하실 수 있습니다."
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천방법은 카카오톡, 페이스북, URL 링크, 이메일 등으로 가능합니다. (웹버전과 일부 상이함)"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매월 1일부터 말일까지 가입자에 대해, 다음달 15일 일괄적으로 정산하여 포인트가 지급됩니다."
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 2. 추천 등급 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="2. 추천 등급"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매월 10일, 3개월 평균 추천인원에 따라 추천등급이 부여됩니다."
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천등급은 1등급/2등급/3등급/4등급으로 구분이 됩니다."
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천등급에 따라 1명 가입 시 기본 포인트에 추가 포인트가 지급됩니다."
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가 포인트는 추천시점이 아닌 가입시점에 추천등급을 기준으로 추가 포인트가 산정됩니다."
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 3. 추천가입으로 인정되지 않는 경우 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="3. 추천가입으로 인정되지 않는 경우"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천자를 확인하기 위한 '추천링크'를 클릭하지 않고 가입하는 경우"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천을 받아 가입한 '회원'이 중복가입으로 판정되는 경우"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="부정한 방법으로 '추천가입'을 진행한 경우"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/recommend_tvInfo34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타 엠플랫이 명시한 '약관'에 위배되었을 경우"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>